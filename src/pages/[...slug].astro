---
import { type CollectionEntry } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime, getAllCollections } from "@lib/utils";

export async function getStaticPaths() {
  const all = (await getAllCollections())
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.published.valueOf() - a.data.published.valueOf());
  return all.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"articles"> | CollectionEntry<"notes">;

const post: Props = Astro.props;
const { Content } = await post.render();

const title = post.collection !== "notes" ? post.data.name : post.collection;
const summary = post.collection !== "notes" ? post.data.summary : "";
---

<PageLayout title={title} description={summary}>
  <Container>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.published} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(post.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {title}
      </div>
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>
